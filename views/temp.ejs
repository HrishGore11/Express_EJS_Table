<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Express_Ejs</title>
  </head>
  <body>
    <div style="background-color: #ea868f">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Navbar</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/home"
                  >Home</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/Add">Add User + </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div style="padding-left: 260px; padding-right: 260px; padding-top: 20px">
      <h4><%=heading%></h4>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Place</th>
            <th scope="col">Mobile.No</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(item){ %> <% if (item.active === true) { %>
          <tr class="table-success">
            <td class="table-success"><%= item._id %></td>
            <td class="table-success"><%= item.name %></td>
            <td class="table-success"><%= item.place %></td>
            <td class="table-success"><%= item.mobile %></td>
            <td class="table-success">
              <a href="/edit/<%= item._id %>">
                <button type="button" class="btn btn-primary">Edit</button>
              </a>
            </td>
            <td class="table-success">
              <a href="/delete/<%= item._id %>">
                <button type="button" class="btn btn-danger">Delete</button>
              </a>
            </td>
          </tr>
          <% } else { %>
          <tr class="table-danger">
            <td class="table-danger"><%= item._id %></td>
            <td class="table-danger"><%= item.name %></td>
            <td class="table-danger"><%= item.place %></td>
            <td class="table-danger"><%= item.mobile %></td>
            <td class="table-danger">
              <a href="/edit/<%= item._id %>">
                <button type="button" class="btn btn-primary">Edit</button>
              </a>
            </td>
            <td class="table-danger">
              <a href="/delete/<%= item._id %>">
                <button type="button" class="btn btn-danger">Delete</button>
              </a>
            </td>
          </tr>
          <% } %> <% }) %>
        </tbody>
      </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
